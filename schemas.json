{
  "schemas": {
    "version": "1.0.0",
    "configure": {
      "my-default-config": {
        "title": "Default Config",
        "type": "object",
        "properties": {
          "options": {
            "title": "Options",
            "type" : "object",
            "properties" : {
              "shellCommand" : {
                "title": "Shell Command",
                "type" : "string"
              },
              "cwd": {
                "title": "Working Directory",
                "type": "string"
              }
            },
            "required": ["shellCommand"]
          }
        },
        "required": ["options"]
      }
    },
    "message": {
      "run-command": {
        "title": "Run Command",
        "type": "object",
        "properties": {
          "options": {
            "type": "array",
            "items": {
              "title": "Argument",
              "type": "string"
            }
          }
        },
        "required": ["options"]
      }
    }
  }
}
